<div class="home_banner" style="background-image: linear-gradient(150deg, #3023AE 0%, #C86DD7 100%), url('');">
  <div class="container text-center">
    <div class="row ">
      <div class="col-xs-12">
        <div class="carousel slide carousel-fade" data-ride="carousel" id="quote-carousel" data-interval="false">
          <div class="home">
            <div class="home__logo">
            <%= image_tag "logo.svg", class: "logo-padding_small home" %>
            </div>
            <!-- Bottom Carousel Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#quote-carousel" data-slide-to="0" class="active"></li>
              <li data-target="#quote-carousel" data-slide-to="1"></li>
              <li data-target="#quote-carousel" data-slide-to="2"></li>
              <li data-target="#quote-carousel" data-slide-to="3"></li>
            </ol>
            <!-- Carousel Slides / Quotes -->
            <div class="carousel-inner">
              <!-- Welcome-->
              <div class="item active">
                <% title = 'SWAPP' %>
                <% paragraph = 'Hi, we\'re SWAPP. The Skillshare community.' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
              <!-- Quote 1 -->
              <div class="item">
                <% title = 'SHARE' %>
                <% paragraph = 'Offer your skills to others. Receive skills in return.' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
              <!-- Quote 2 -->
              <div class="item">
                <% title = 'LEARN' %>
                <% paragraph = 'Acquire those skills that you\'ve always wanted.' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
              <!-- Quote 3 -->
              <div class="item">
                <% title = 'CONNECT' %>
                <% paragraph = 'Bond with someone using those skills you love. ' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
            </div>
          </div>
        </div>
        <form action="<%= new_user_registration_path %>">
          <button class="button button__top">SIGN UP</button>
        </form>
        <h3 class="home__member"> Already a member? <%= link_to "Sign In", user_session_path, class:"home__btn__signup" %></h3>
        <h5 class="home__terms">By entering I accept terms & conditions</h5>
      </div>
    </div>
  </div>
</div>

