<div class="home_banner" style="background-image: linear-gradient(150deg, #3023AE 0%, #C86DD7 100%), url('');">
  <div class="container text-center">
    <div class="row ">
      <div class="col-xs-12">
        <div class="carousel slide" data-ride="carousel" id="quote-carousel">
          <div class="home">
            <p class="home__logo">LOGO</p>
            <!-- Bottom Carousel Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#quote-carousel" data-slide-to="0" class="active"></li>
              <li data-target="#quote-carousel" data-slide-to="1"></li>
              <li data-target="#quote-carousel" data-slide-to="2"></li>
              <li data-target="#quote-carousel" data-slide-to="3"></li>
            </ol>
            <!-- Carousel Slides / Quotes -->
            <div class="carousel-inner">
              <!-- Welcome-->
              <div class="item active">
                <% title = 'WELCOME' %>
                <% paragraph = 'Welcome to SWAPP! The place to meet new people and learn new things.' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
              <!-- Quote 1 -->
              <div class="item">
                <% title = 'CONNECT' %>
                <% paragraph = 'Meeting new people is hard. We think it\'s more fun if you have a common interest over which to bond.' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
              <!-- Quote 2 -->
              <div class="item">
                <% title = 'SHARE' %>
                <% paragraph = 'People want to learn what you know! Help people learn something that you\'re good at.' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
              <!-- Quote 3 -->
              <div class="item">
                <% title = 'LEARN' %>
                <% paragraph = 'Learning new things is great, but lessons are expensive and time consuming. Learn and meet new people with SWAPP. ' %>
                <%=  render "quote", locals: {title: title, paragraph: paragraph} %>
              </div>
            </div>
          </div>
        </div>
        <form action="<%= new_user_registration_path %>">
          <button class="button button__top">Sign Up</button>
        </form>
        <form action="<%= user_session_path %>">
          <button class="button">Sign In</button>
        </form>
        <p class="home__terms">By entering I accept terms & conditions</p>
      </div>
    </div>
  </div>
</div>

