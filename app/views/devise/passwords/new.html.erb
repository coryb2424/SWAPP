<div class= form__background>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div id="form">
          <div class="form__brand">
            <%= image_tag "logo.svg", class: "logo" %>
            <h2>Forgot your password?</h2>
          </div>

          <%= minimal_form_for(resource, as: resource_name, url: password_path(resource_name), :defaults => { :input_html => { :class => "form__input" } }) do |f| %>
          <%= f.error_notification %>

                <div class="form__wrap-input">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" },
                              placeholder: "Email" %>
                              <span class="fas fa-envelope form__icon"></span>
                </div>

            <div class="form__links">
              <div class="form-actions">
                <%= f.button :submit, "RESET PASSWORD", class: "button button--long" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
